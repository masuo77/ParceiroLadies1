<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_season_list_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="144dp"
            android:background="@color/colorControlHighlight">

            <TextView
                android:text="2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:textSize="24dp"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/text_view_season" />

            <LinearLayout
                android:id="@+id/textview_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_toRightOf="@id/text_view_season">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="共超"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_slogan"
                        android:textSize="24sp"
                        android:textColor="@color/textColorPrimary" />

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/text_view_rank"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/textColorSecondary" />

                </RelativeLayout>

                <TextView
                    android:text="プレナスチャレンジリーグ　EAST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/textColorSecondary"
                    android:id="@+id/text_view_league" />

                <TextView
                    android:text="南長野に集う仲間よ\n声の限り唄おう 勝利のために"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:lineSpacingExtra="3sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/textColorSecondary"
                    android:id="@+id/text_view_chant" />

                <TextView
                    android:text="AC長野パルセイロ応援チャントより"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColorSecondary"
                    android:id="@+id/text_view_chant_readme" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>