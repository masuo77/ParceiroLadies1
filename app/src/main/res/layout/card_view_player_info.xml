<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_player_info"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dip" >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="名前: "
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAAA"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_yomi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMAE"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_yomi_j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ひらがな"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="誕生日"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/text_view_player_info_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/1/17"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="身長"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/text_view_player_info_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160cm"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="体重"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50kg: "
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="血液型"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="出身"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="長野県"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="経歴"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="パルセイロ"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="番号"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="ポジション"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="シーズンノート"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_season_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="あああ"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="加入年"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_joining_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="加入リリース"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_joining_announced_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/1/17"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="加入コメント"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_joining_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:lineSpacingExtra="3sp"
                android:text="あああ"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="加入ノート"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_joining_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="あああ"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="退団年"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_leaving_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="退団リリース"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_leaving_announced_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016/1/17"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="退団コメント"
                android:layout_marginLeft="16dp"
                                />
            <TextView
                android:id="@+id/text_view_player_info_leaving_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:lineSpacingExtra="3sp"

                android:text="あああ"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="退団ノート"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_leaving_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="退団後"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:id="@+id/text_view_player_info_after_leaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>
